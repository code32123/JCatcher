{
    "tasks": [
        {
          "label": "Build",
          "type": "shell",
          "command": "make",
          "options": {
              "cwd": "${workspaceFolder}",
              "env": {
                "DEVKITPRO": "/opt/devkitpro",
                "DEVKITARM": "/opt/devkitpro/devkitARM"
              }
          },
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "panel": "shared"
          }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                  "DEVKITPRO": "/opt/devkitpro",
                  "DEVKITARM": "/opt/devkitpro/devkitARM"
                }
            },
            "presentation": {
                "panel": "shared"
            }
        }
    ],
    "version": "2.0.0"
}